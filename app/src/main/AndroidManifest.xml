<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.askey.dvr.cdr7010.dashcam"
    android:sharedUserId="android.uid.system">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 定位权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.location" />

    <uses-feature android:name="android.hardware.camera2" android:required="true"/>
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    
    <application
        android:name=".application.DashCamApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.askey.dvr.cdr7010.dashcam.notice.NoticeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.MONKEY" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>
        <activity android:name="com.askey.dvr.cdr7010.dashcam.ui.MainActivity"
            android:exported="true">
        </activity>
        <receiver android:name="com.askey.dvr.cdr7010.dashcam.receiver.RecordingFileReceiver">
            <intent-filter>
                <action android:name="com.askey.dvr.cdr7010.dashcam.limit"/>
            </intent-filter>
        </receiver>
        <receiver android:name="com.askey.dvr.cdr7010.dashcam.receiver.GPSReceiver">
            <intent-filter>
                <action android:name="android.location.GPS_FIX_CHANGE"/>
                <action android:name="android.location.GPS_ENABLED_CHANGE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>